@{
    ViewData["Title"] = "Delete Application";
}

@model Movie

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-outline-primary">Cancel</a>
    <button type="submit" class="btn btn-outline-danger">Delete</button>

    <input type="hidden" asp-for="MovieId" />
</form>